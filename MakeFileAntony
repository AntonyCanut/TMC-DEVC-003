CC	= gcc

SRC = main.c 

NAME = SpaceInvader

OBJ = $(SRC:%.c=%.o)

LFLAGS = -lSDL2 -lSDL2_image

all:		$(NAME)

$(NAME):	$(OBJ)
		$(CC) $(OBJ) -lSDL2 -lSDL2_image -o $(NAME)

clean:
		$(RM) $(OBJ)

fclean:		clean
		$(RM) $(NAME)

re:		fclean all